<div class="text-center">
  <h1>新規作成</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@schedule) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :event, 'イベント名' %>
        <%= f.text_field :event, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :event_date, '日付' %>
        <%= f.date_select :event_date, {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :start_at, '開始時刻' %>
        <%= f.time_select :start_at, {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :end_at, '終了時刻' %>
        <%= f.time_select :end_at, {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :location, '場所' %>
        <%= f.text_field :location, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :detail, '詳細' %>
        <%= f.text_field :detail, class: 'form-control' %>
      </div>

      <%= f.submit '作成', class: 'btn btn-primary btn-ms' %>
    <% end %>
  </div>
</div>