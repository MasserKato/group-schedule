<ul class="media-list">
  <% schedules.each do |schedule| %>
    <li class="media">
      <div class="media-body">
        <p><%= schedule.date_time %></p>
        <p><%= schedule.start_at %>〜<%= schedule.end_at %></p>
        <p><%= schedule.event %></p>
        <p><%= schedule.location %></p>
      </div>
      <div>
        <% if current_user == schedule.user %>
          <%= link_to "削除", schedule, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </div>
    </li>
  <% end %>
  <%= paginate schedules %>
</ul>